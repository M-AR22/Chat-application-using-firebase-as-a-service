<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/blank_avatar"
        android:layout_marginTop="5dp"
        android:id="@+id/user_chat_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/user_chat_image"
        android:id="@+id/chat_user_name"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Seen"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="1"
        android:scrollHorizontally="true"
        android:layout_below="@+id/chat_user_name"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/white"
        android:layout_marginStart="5dp"
        android:layout_alignBaseline="@+id/user_chat_image"
        android:layout_alignStart="@+id/chat_user_name"
        android:id="@+id/chat_last_seen">
    </TextView>

</RelativeLayout>