<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettings">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/profile_toolbar"></include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/blank_avatar"
        android:layout_below="@+id/profile_toolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/setting_circleimage"/>

    <TextView
        android:id="@+id/setting_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_circleimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/setting_userstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Hi! there i'm using Chat App"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_userstatus"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:text="change image"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:id="@+id/setting_change_image_btn"/>

    <Button
        android:id="@+id/setting_change_status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_change_image_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorAccent"
        android:padding="10dp"
        android:text="change status"
        android:textColor="@android:color/white" />

</RelativeLayout>